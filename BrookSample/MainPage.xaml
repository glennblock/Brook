<UserControl x:Class="BrookSample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:Brook;assembly=Brook"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <v:ViewElement ViewName="ViewModelSample.MainPage" Background="White">
        <Grid Background="White" Width="400" Height="300">
            <TextBlock HorizontalAlignment="Center" FontSize="24" Text="{Binding Message}"/>
        </Grid>
    </v:ViewElement>
</UserControl>
